@using Research.City.Admin.Toolkit;
@using Internship.Core.DomainModels.SSOT;
@using Internship.Web.Helpers;
@using Internship.Core.DomainModels.DTO;
@using Alamut.Data.Paging;
@using Internship.Core.DomainModels.ViewModel.Banks;


@model SearchCriteriaPageModel<List<Internship.Core.DomainModels.Entity.Banks.BankUniversityType>, BankUniversityTypeSearchViewModel>


@{
    ViewBag.Title = "نوع دانشگاه";
    Layout = "Layout/BankUniversity";
}

@{
    ViewBag.BreadCrumb = new BreadCrumb
    {
        Links = new List<BreadCrumbLink>
{


new BreadCrumbLink
{
    Title = "نوع دانشگاه"
},
}
    };
}
@{
    var count = 0;
}

<div class="hpanel">
    <div class="tab-content tab-content-flex">
        <div id="tab-5" class="tab-pane active">
            <div class="panel-body">
                <a class="slideToggle">
                    <div id="hamburger-menu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </a>


                <div class="panel-right">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="hpanel horange margin-bottom-0">
                                <div class="size-15 panel-heading hbuilt main__form">
                                    نوع دانشگاه
                                </div>

                                <div class="panel-body panel-scroll" data-equalheight="box">
                                    <div class="col-xs-12">
                                        <div class="filterbox mt mb">
                                            <form class="form-inline" asp-action="Index" method="Get">
                                                <div class="form-group">
                                                    <label>جستجو بر اساس عنوان</label>
                                                    <input type="text" class="form-control" name="term" value="@Model.SearchCriteria.Term" />
                                                    <button type="submit" class="btn btn-info">جستجو</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                    <form class="form-horizontal" asp-controller="BankUniversityType" asp-action="Create" method="post">

                                        <div class="form-card">

                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                <div class="form-element form-input">
                                                    <input name="Title" id="field-OldName" class="form-element-field" placeholder="عنوان " type="text">
                                                    <div class="form-element-bar"></div>
                                                    <label class="form-element-label" for="field-OldName">عنوان </label>
                                                </div>
                                            </div>

                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                <input class="btn w-lg btn-success pull-right margin-top-15" type="submit" value="ثبت اطلاعات">
                                            </div>
                                        </div>

                                    </form>

                                    <div class="col-xs-12">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover table-valigned">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center" width="150"> ردیف </th>
                                                        <th class="text-center">عنوان</th>
                                                        <th class="text-center" width="300">اقدامات</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.PageModel)
                                                    {
                                                        count++;
                                                        <tr>
                                                            <td>@count.ToPersianNumbers()</td>
                                                            <td>@item.Title</td>
                                                            <td>
                                                                <span @Html.Raw(FancyboxHelper.Button())>
                                                                    <a href="@Url.Action("Index", "BankUniversityName", new {id = item.Id})">
                                                                        <i class="pe-7s-plus largeicon" title="نام دانشگاه" data-toggle="tooltip"></i>
                                                                    </a>
                                                                </span>
                                                                <span @Html.Raw(FancyboxHelper.Button())>
                                                                    <a href="@Url.Action("Edit", "BankUniversityType", new {id = item.Id})">
                                                                        <i class="pe-7s-file largeicon" title="ویرایش" data-toggle="tooltip"></i>
                                                                    </a>
                                                                </span>

                                                                <a href="@Url.Action("Delete", "BankUniversityType", new {id = item.Id})" data-role="confirm">
                                                                    <i class="pe-7s-close-circle largeicon text-danger" title="حذف" data-toggle="tooltip"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        @*@Html.Partial("_Pagination", Model.PageModel)*@

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>